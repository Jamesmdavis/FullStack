<h1>Login Credentials</h1>
<div id="container">
    <form action="/api/credentials" method="POST" id="form">
        <div class="form-item">
            <label for="username">Username</label>
            <input type="text" name="username">
        </div>
        <div class="form-item">
            <label for="password">Password</label>
            <input type="text" name="password">
        </div>
        <input type="submit" value="Login" class="form-item-submit">
    </form>
</div>